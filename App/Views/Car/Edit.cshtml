@model Application.DTO.Cars.CarFullDTO

@{
    ViewData["Title"] = "Edycja samochodu";
}
<html>
    <head>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    </head>
        <h1>@ViewData["Title"]</h1>
    <body>
            <form asp-action="Edit" asp-route-id="@Model.CarId" method="post">
                    Ostatnia modyfikacja @Model.Modyfication
                    <div class="form-group">
                        @Html.HiddenFor(model => model.CarId)
                    </div>
    
                    <div class="form-group">
                        <label asp-for="Mark">Marka:</label>
                        <input asp-for="Mark" class="form-control" />
                        @Html.ValidationMessageFor(model => model.Mark,"" , new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label asp-for="Model">Model:</label>
                        <input asp-for="Model" class="form-control" />
                        @Html.ValidationMessageFor(model => model.Model,"" , new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label asp-for="RejestractionNumber">Numer Rejestracyjny:</label>
                        <input asp-for="RejestractionNumber" class="form-control" />
                        @Html.ValidationMessageFor(model => model.RejestractionNumber,"" , new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label asp-for="ProductionYear">Rok Produkcji:</label>
                        <input asp-for="ProductionYear" class="form-control" />
                        @Html.ValidationMessageFor(model => model.ProductionYear,"" , new { @class = "text-danger" })
                    </div>   

                    <button type="submit" class="btn btn-primary">Zapisz</button>
                    <a href="@Url.Action("List")" class="btn btn-primary">Wróć</a>

            </form>
    </body>
</html>






