@model (Application.DTO.Timetable.TimetablePlaning, Application.DTO.Timetable.TimetableAdd)

@{
    ViewData["Title"] = "Planowanie Nowej jazdy";
}

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="container mt-5">        
        <form asp-action="Add" asp-controller="Timetable" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Date">Data:</label>
                        <select asp-for="Item2.Date" id="Date" class="form-control">
                            <option value="">Wybierz</option>
                            @foreach (var item in Model.Item1.Date)
                            {
                                <option value="@item.Date">@item.Date.Date.ToString("dd-MM-yyyy")</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Item2.Date, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="SelectedHour">Godzina:</label>
                        <select asp-for="Item2.SelectedHour" id="SelectedHour" class="form-control">
                            @for (var i = 6; i < 23; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Item2.SelectedHour, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Category">Kategoria:</label>
                        <select asp-for="Item2.Category" id="Category" class="form-control">
                            <option value="0">Wybierz opcję</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Item2.Category, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="NumbersOfHours">Liczba Godzin:</label>
                        <select asp-for="Item2.NumbersOfHours" id="NumbersOfHours" class="form-control">
                            <option value=0>Wybierz opcję</option>
                            @for (var i = 1; i < 4; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Item2.NumbersOfHours, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Instructor">Instruktor:</label>
                        <select asp-for="Item2.InstructorId" id="Instructor" class="form-control">
                            <option value=0>Wybierz opcję</option>
                            @foreach (var item in Model.Item1.Instructors)
                            {
                                <option value="@item.InstructorId">@item.FirstName @item.LastName</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Item2.InstructorId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Student">Kursant:</label>
                        <select asp-for="Item2.StudentId" id="Student" class="form-control">
                            <option value=0>Wybierz opcję</option>
                            @foreach (var item in Model.Item1.Students)
                            {
                                <option value="@item.StudentId">@item.FirstName @item.LastName</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Item2.StudentId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Car">Samochód:</label>
                        <select asp-for="Item2.CarId" id="Car" class="form-control">
                            <option value=0>Wybierz opcję</option>
                            @foreach (var item in Model.Item1.Cars)
                            {
                                <option value="@item.CarId"> @item.Mark @item.Model @item.RejestractionNumber</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.Item2.CarId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz</button>
        </form>
    </div>
</body>
</html>
    <!-- Dodaj linki do Bootstrapa przed zamknięciem </body> tag -->
